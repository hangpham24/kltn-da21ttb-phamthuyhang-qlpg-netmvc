@{
    ViewData["Title"] = "Kiểm tra băm mật khẩu (Account)";
}

<div class="container mt-4">
    <h1>Kiểm tra băm mật khẩu (Account Controller)</h1>

    <div class="card mb-4">
        <div class="card-header">
            Kết quả băm
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Mật khẩu:</strong>
                </div>
                <div class="col-md-9">
                    @ViewData["Password"]
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <strong>Kết quả băm (SHA256):</strong>
                </div>
                <div class="col-md-9">
                    <code>@ViewData["HashedPassword"]</code>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Kiểm tra với mật khẩu khác
        </div>
        <div class="card-body">
            <form method="get" action="">
                <div class="mb-3">
                    <label for="password" class="form-label">Nhập mật khẩu để kiểm tra:</label>
                    <input type="text" class="form-control" id="password" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Kiểm tra</button>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Login")" class="btn btn-secondary">Quay lại đăng nhập</a>
        <a href="@Url.Action("TestHashPassword", "ThanhViens", new { password = ViewData["Password"] })" class="btn btn-info">Kiểm tra cùng mật khẩu trong ThanhViensController</a>
    </div>
</div> 
@model KLTN.Models.Database.TaiKhoan
@{
    ViewData["Title"] = "Thông tin cá nhân";
    var avatarUrl = "/img/avatar-default.png";
    if (Model.ThanhVien != null && !string.IsNullOrEmpty(Model.ThanhVien.AnhDaiDien))
    {
        avatarUrl = Model.ThanhVien.AnhDaiDien;
    }
    else if (Model.HuanLuyenVien != null && !string.IsNullOrEmpty(Model.HuanLuyenVien.AnhDaiDien))
    {
        avatarUrl = Model.HuanLuyenVien.AnhDaiDien;
    }
}

<div class="container mx-auto px-4 py-8">
    <div class="flex flex-col lg:flex-row gap-6">
        <!-- Sidebar -->
        <div class="w-full lg:w-1/4">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <div class="flex flex-col items-center text-center mb-6">
                    <div class="relative mb-4">
                        <img class="w-32 h-32 rounded-full object-cover" src="@avatarUrl" alt="User avatar">
                        <span class="absolute bottom-0 right-0 bg-green-500 p-1.5 rounded-full ring-2 ring-white"></span>
                    </div>
                    <h5 class="text-xl font-semibold text-gray-900 dark:text-white">@(Model.ThanhVien?.HoTen ?? Model.HuanLuyenVien?.HoTen ?? Model.TenDangNhap)</h5>
                    <span class="text-sm text-gray-500 dark:text-gray-400">@Model.Quyen?.TenQuyen</span>
                </div>

                <ul class="space-y-2">
                    <li>
                        <a asp-controller="Account" asp-action="Profile" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white bg-gray-100 dark:bg-gray-700 group">
                            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z"/>
                            </svg>
                            <span class="ml-3">Thông tin cá nhân</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="EditProfile" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="m13.835 7.578-1.414-1.414 4.243-4.243 1.414 1.414-4.243 4.243Zm-8.192.5a1 1 0 0 0-.321.079l-3 1a1 1 0 0 0-.619.619l-1 3a1.006 1.006 0 0 0 .217 1.002l7 7a1 1 0 0 0 1.414 0l7-7a1 1 0 0 0 0-1.414l-7-7a1 1 0 0 0-1.078-.217l-3 1a1 1 0 0 0-.613.931ZM7.207 10.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"/>
                            </svg>
                            <span class="ml-3">Cập nhật thông tin</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="ChangePassword" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10 9a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm0-7a5 5 0 1 0 0 10 5 5 0 0 0 0-10ZM4.26 15.55A3.751 3.751 0 0 1 8 12h4c1.26 0 2.38.65 3.03 1.55A9.96 9.96 0 0 1 10 20a9.96 9.96 0 0 1-5.74-4.45Z"/>
                            </svg>
                            <span class="ml-3">Đổi mật khẩu</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="Registrations" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M5 5V.13a2.96 2.96 0 0 0-1.293.749L.879 3.707A2.96 2.96 0 0 0 .13 5H5Z"/>
                                <path d="M6.737 11.061a2.961 2.961 0 0 1 .81-1.515l6.117-6.116A4.839 4.839 0 0 1 16 2.141V2a1.97 1.97 0 0 0-1.933-2H7v5a2 2 0 0 1-2 2H0v11a1.969 1.969 0 0 0 1.933 2h12.134A1.97 1.97 0 0 0 16 18v-3.093l-1.546 1.546c-.413.413-.94.695-1.513.81l-3.4.679a2.947 2.947 0 0 1-1.85-.227 2.96 2.96 0 0 1-1.635-3.257l.681-3.397Z"/>
                                <path d="M8.961 16a.93.93 0 0 0 .189-.019l3.4-.679a.961.961 0 0 0 .49-.263l6.118-6.117a2.884 2.884 0 0 0-4.079-4.078l-6.117 6.117a.96.96 0 0 0-.263.491l-.679 3.4A.961.961 0 0 0 8.961 16Zm7.477-9.8a.958.958 0 0 1 .68-.281.961.961 0 0 1 .682 1.644l-.315.315-1.36-1.36.313-.318Zm-5.911 5.911 4.236-4.236 1.359 1.359-4.236 4.237-1.7.339.341-1.699Z"/>
                            </svg>
                            <span class="ml-3">Lịch sử đăng ký</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="w-full lg:w-3/4">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="alert-success" class="flex items-center p-4 mb-4 text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
                        <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>
                        </svg>
                        <span class="sr-only">Thành công</span>
                        <div class="ml-3 text-sm font-medium">
                            @TempData["SuccessMessage"]
                        </div>
                        <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-green-50 text-green-500 rounded-lg focus:ring-2 focus:ring-green-400 p-1.5 hover:bg-green-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-green-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-success" aria-label="Close">
                            <span class="sr-only">Đóng</span>
                            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                            </svg>
                        </button>
                    </div>
                }

                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Thông tin cá nhân</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h4 class="text-lg font-medium text-gray-900 dark:text-white mb-3">Thông tin tài khoản</h4>
                        <div class="space-y-3">
                            <div>
                                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Tên đăng nhập</p>
                                <p class="text-base font-medium text-gray-900 dark:text-white">@Model.TenDangNhap</p>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</p>
                                <p class="text-base font-medium text-gray-900 dark:text-white">@(Model.ThanhVien?.Email ?? Model.HuanLuyenVien?.Email ?? "Chưa cập nhật")</p>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Số điện thoại</p>
                                <p class="text-base font-medium text-gray-900 dark:text-white">@(Model.ThanhVien?.SoDienThoai ?? Model.HuanLuyenVien?.SoDienThoai ?? "Chưa cập nhật")</p>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Quyền</p>
                                <p class="text-base font-medium text-gray-900 dark:text-white">@Model.Quyen?.TenQuyen</p>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Trạng thái</p>
                                <p class="text-base font-medium text-gray-900 dark:text-white">
                                    @if (Model.TrangThai == "HoatDong")
                                    {
                                        <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Hoạt động</span>
                                    }
                                    else if (Model.TrangThai == "Khoa")
                                    {
                                        <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Đã khóa</span>
                                    }
                                    else
                                    {
                                        <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">@Model.TrangThai</span>
                                    }
                                </p>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Ngày tạo</p>
                                <p class="text-base font-medium text-gray-900 dark:text-white">@Model.NgayTao.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Lần đăng nhập cuối</p>
                                <p class="text-base font-medium text-gray-900 dark:text-white">@Model.LanDangNhapCuoi?.ToString("dd/MM/yyyy HH:mm:ss")</p>
                            </div>
                        </div>
                    </div>

                    @if (Model.ThanhVien != null)
                    {
                        <div>
                            <h4 class="text-lg font-medium text-gray-900 dark:text-white mb-3">Thông tin thành viên</h4>
                            <div class="space-y-3">
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Họ tên</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">@Model.ThanhVien.HoTen</p>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Ngày sinh</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">@(Model.ThanhVien.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</p>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Giới tính</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">@(Model.ThanhVien.GioiTinh ?? "Chưa cập nhật")</p>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Địa chỉ</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">@(Model.ThanhVien.DiaChi ?? "Chưa cập nhật")</p>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Ngày đăng ký</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">@(Model.NgayTao.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</p>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Trạng thái</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">
                                        <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Hoạt động</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.HuanLuyenVien != null)
                    {
                        <div>
                            <h4 class="text-lg font-medium text-gray-900 dark:text-white mb-3">Thông tin huấn luyện viên</h4>
                            <div class="space-y-3">
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Họ tên</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">@Model.HuanLuyenVien.HoTen</p>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Chuyên môn</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">@Model.HuanLuyenVien.ChuyenMon</p>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Kinh nghiệm</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">@Model.HuanLuyenVien.KinhNghiem</p>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Ngày sinh</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">@(Model.HuanLuyenVien.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</p>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Giới tính</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">@(Model.HuanLuyenVien.GioiTinh ?? "Chưa cập nhật")</p>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Địa chỉ</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">@(Model.HuanLuyenVien.DiaChi ?? "Chưa cập nhật")</p>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Trạng thái</p>
                                    <p class="text-base font-medium text-gray-900 dark:text-white">
                                        @if (Model.HuanLuyenVien.TrangThaiHLV == "HoatDong")
                                        {
                                            <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Hoạt động</span>
                                        }
                                        else if (Model.HuanLuyenVien.TrangThaiHLV == "NgungHoatDong")
                                        {
                                            <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Ngừng hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">@Model.HuanLuyenVien.TrangThaiHLV</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="flex flex-wrap gap-4 mt-6">
                    <a asp-controller="Account" asp-action="EditProfile" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                        <svg class="w-4 h-4 inline-block mr-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
                            <path d="M12.687 14.408a3.01 3.01 0 0 1-1.533.821l-3.566.713a3 3 0 0 1-3.53-3.53l.713-3.566a3.01 3.01 0 0 1 .821-1.533L10.905 2H2.167A2.169 2.169 0 0 0 0 4.167v11.666A2.169 2.169 0 0 0 2.167 18h11.666A2.169 2.169 0 0 0 16 15.833V11.1l-3.313 3.308Zm5.53-9.065.546-.546a2.518 2.518 0 0 0 0-3.56 2.576 2.576 0 0 0-3.559 0l-.547.547 3.56 3.56Z"/>
                            <path d="M13.243 3.2 7.359 9.081a.5.5 0 0 0-.136.256L6.51 12.9a.5.5 0 0 0 .59.59l3.566-.713a.5.5 0 0 0 .255-.136L16.8 6.757 13.243 3.2Z"/>
                        </svg>
                        Cập nhật thông tin
                    </a>
                    <a asp-controller="Account" asp-action="ChangePassword" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700">
                        <svg class="w-4 h-4 inline-block mr-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 2a4 4 0 0 0-4 4v2h-.25A2.75 2.75 0 0 0 3 10.75v6.5A2.75 2.75 0 0 0 5.75 20h8.5A2.75 2.75 0 0 0 17 17.25v-6.5A2.75 2.75 0 0 0 14.25 8H14V6a4 4 0 0 0-4-4Zm1 9a1 1 0 1 1-2 0 1 1 0 0 1 2 0Zm-1-7a2 2 0 0 1 2 2v2H8V6a2 2 0 0 1 2-2Z"/>
                        </svg>
                        Đổi mật khẩu
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Tự động ẩn thông báo thành công sau 5 giây
        setTimeout(function () {
            var alert = document.getElementById('alert-success');
            if (alert) {
                alert.style.display = 'none';
            }
        }, 5000);
    </script>
} 
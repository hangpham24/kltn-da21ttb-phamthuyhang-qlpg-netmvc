@model IEnumerable<KLTN.Models.Database.TaiKhoan>

@{
    ViewData["Title"] = "Danh sách tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6 mb-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Danh sách tài khoản</h1>
        <a asp-action="Create" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium">
            <i class="bi bi-plus-lg mr-2"></i>Thêm tài khoản mới
        </a>
    </div>

    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.TenDangNhap)
                    </th>
                    <th scope="col" class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.TrangThai)
                    </th>
                    <th scope="col" class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.NgayTao)
                    </th>
                    <th scope="col" class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.LanDangNhapCuoi)
                    </th>
                    <th scope="col" class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.Quyen)
                    </th>
                    <th scope="col" class="px-4 py-3">
                        Thao tác
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <th scope="row" class="px-4 py-3 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            @Html.DisplayFor(modelItem => item.TenDangNhap)
                        </th>
                        <td class="px-4 py-3">
                            @if (item.TrangThai == "HoatDong")
                            {
                                <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">
                                    Hoạt động
                                </span>
                            }
                            else if (item.TrangThai == "Khoa")
                            {
                                <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">
                                    Khóa
                                </span>
                            }
                            else if (item.TrangThai == "ChuaKichHoat")
                            {
                                <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">
                                    Chưa kích hoạt
                                </span>
                            }
                            else
                            {
                                <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">
                                    @item.TrangThai
                                </span>
                            }
                        </td>
                        <td class="px-4 py-3">
                            @(item.NgayTao.ToString("dd/MM/yyyy HH:mm"))
                        </td>
                        <td class="px-4 py-3">
                            @(item.LanDangNhapCuoi.HasValue ? item.LanDangNhapCuoi.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa đăng nhập")
                        </td>
                        <td class="px-4 py-3">
                            @Html.DisplayFor(modelItem => item.Quyen.TenQuyen)
                        </td>
                        <td class="px-4 py-3">
                            <div class="flex gap-2">
                                <a asp-action="Edit" asp-route-id="@item.MaTK" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                                    <i class="bi bi-pencil-square mr-1"></i>Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MaTK" class="font-medium text-green-600 dark:text-green-500 hover:underline">
                                    <i class="bi bi-info-circle mr-1"></i>Chi tiết
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MaTK" class="font-medium text-red-600 dark:text-red-500 hover:underline">
                                    <i class="bi bi-trash mr-1"></i>Xóa
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

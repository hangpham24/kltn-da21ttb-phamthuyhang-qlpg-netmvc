@model KLTN.Models.Database.TaiKhoan

@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6 mb-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Chỉnh sửa tài khoản</h1>
        <a asp-action="Index" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 focus:ring-4 focus:ring-gray-200 font-medium dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600">
            <i class="bi bi-arrow-left mr-2"></i>Quay lại danh sách
        </a>
    </div>

    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6">
        <form asp-action="Edit" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 dark:text-red-400"></div>
            <input type="hidden" asp-for="MaTK" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="TenDangNhap" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                    <input asp-for="TenDangNhap" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="Nhập tên đăng nhập" />
                    <span asp-validation-for="TenDangNhap" class="text-sm text-red-600 dark:text-red-500"></span>
                </div>
                
                <div>
                    <label asp-for="MatKhauHash" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                    <input asp-for="MatKhauHash" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="MatKhauHash" class="text-sm text-red-600 dark:text-red-500"></span>
                </div>
                
                <div>
                    <label asp-for="MaQuyen" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                    <select asp-for="MaQuyen" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" asp-items="ViewBag.MaQuyen">
                        <option value="">-- Chọn quyền --</option>
                    </select>
                    <span asp-validation-for="MaQuyen" class="text-sm text-red-600 dark:text-red-500"></span>
                </div>
                
                <div>
                    <label asp-for="TrangThai" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                    <select asp-for="TrangThai" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white">
                        <option value="HoatDong">Hoạt động</option>
                        <option value="ChuaKichHoat">Chưa kích hoạt</option>
                        <option value="Khoa">Khóa</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-sm text-red-600 dark:text-red-500"></span>
                </div>
                
                <div>
                    <label asp-for="NgayTao" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                    <input asp-for="NgayTao" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" />
                    <span asp-validation-for="NgayTao" class="text-sm text-red-600 dark:text-red-500"></span>
                </div>
                
                <div>
                    <label asp-for="LanDangNhapCuoi" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                    <input asp-for="LanDangNhapCuoi" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" />
                    <span asp-validation-for="LanDangNhapCuoi" class="text-sm text-red-600 dark:text-red-500"></span>
                </div>
            </div>
            
            <div class="flex justify-end">
                <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    <i class="bi bi-save mr-2"></i>Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

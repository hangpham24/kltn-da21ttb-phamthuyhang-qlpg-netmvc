@model KLTN.Models.Database.KhachVangLai

@{
    ViewData["Title"] = "Chi tiết khách vãng lai";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6">
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Chi tiết khách vãng lai</h2>
        <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Xem thông tin chi tiết của khách vãng lai</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Thông tin cá nhân</h3>
            
            <div class="mb-3">
                <p class="text-sm text-gray-500 dark:text-gray-400">@Html.DisplayNameFor(model => model.HoTen)</p>
                <p class="text-base font-medium text-gray-900 dark:text-white">@Html.DisplayFor(model => model.HoTen)</p>
            </div>
            
            <div class="mb-3">
                <p class="text-sm text-gray-500 dark:text-gray-400">@Html.DisplayNameFor(model => model.SoDienThoai)</p>
                <p class="text-base font-medium text-gray-900 dark:text-white">@Html.DisplayFor(model => model.SoDienThoai)</p>
            </div>
            
            <div class="mb-3">
                <p class="text-sm text-gray-500 dark:text-gray-400">@Html.DisplayNameFor(model => model.Email)</p>
                <p class="text-base font-medium text-gray-900 dark:text-white">@Html.DisplayFor(model => model.Email)</p>
            </div>
        </div>
        
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Thông tin khác</h3>
            
            <div class="mb-3">
                <p class="text-sm text-gray-500 dark:text-gray-400">@Html.DisplayNameFor(model => model.NgayGhiNhan)</p>
                <p class="text-base font-medium text-gray-900 dark:text-white">@Html.DisplayFor(model => model.NgayGhiNhan)</p>
            </div>
            
            <div class="mb-3">
                <p class="text-sm text-gray-500 dark:text-gray-400">@Html.DisplayNameFor(model => model.GiaTien)</p>
                <p class="text-base font-medium text-gray-900 dark:text-white">@Html.DisplayFor(model => model.GiaTien) VNĐ</p>
            </div>
            
            <div class="mb-3">
                <p class="text-sm text-gray-500 dark:text-gray-400">@Html.DisplayNameFor(model => model.GhiChu)</p>
                <p class="text-base font-medium text-gray-900 dark:text-white">@Html.DisplayFor(model => model.GhiChu)</p>
            </div>
        </div>
    </div>
    
    <div class="flex items-center space-x-4">
        <a asp-action="Edit" asp-route-id="@Model?.MaKVL" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
            <i class="bi bi-pencil-square mr-2"></i>Chỉnh sửa
        </a>
        <a asp-action="Index" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
            <i class="bi bi-arrow-left mr-2"></i>Quay lại danh sách
        </a>
    </div>
</div>

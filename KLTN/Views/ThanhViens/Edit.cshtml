@model KLTN.Models.Database.ThanhVien

@{
    ViewData["Title"] = "Chỉnh sửa thành viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Thêm Flowbite và Tailwind CSS CDN -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="px-4 py-5">
    <div class="mb-4">
        <h1 class="text-2xl font-bold text-gray-800">Chỉnh sửa thành viên</h1>
        <nav class="flex mt-3" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="/ThanhViens" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                        <svg class="w-3 h-3 mr-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                        </svg>
                        Danh sách thành viên
                    </a>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                        </svg>
                        <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Chỉnh sửa thành viên</span>
                    </div>
                </li>
            </ol>
        </nav>
    </div>

    <div class="py-4 px-5 mb-6 bg-white rounded-lg shadow-md">
        <form asp-action="Edit" enctype="multipart/form-data" class="max-w-4xl mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            <input type="hidden" asp-for="MaTV" />
            <input type="hidden" asp-for="AnhDaiDien" />
            
            <div class="grid md:grid-cols-2 gap-6">
                <!-- Cột bên trái -->
                <div>
                    <div class="mb-4">
                        <label asp-for="HoTen" class="block mb-2 text-sm font-medium text-gray-900">Họ tên</label>
                        <input asp-for="HoTen" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                        <span asp-validation-for="HoTen" class="mt-1 text-sm text-red-600"></span>
            </div>
                    
                    <div class="mb-4">
                        <label asp-for="NgaySinh" class="block mb-2 text-sm font-medium text-gray-900">Ngày sinh</label>
                        <input asp-for="NgaySinh" type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                        <span asp-validation-for="NgaySinh" class="mt-1 text-sm text-red-600"></span>
            </div>
                    
                    <div class="mb-4">
                        <label asp-for="GioiTinh" class="block mb-2 text-sm font-medium text-gray-900">Giới tính</label>
                        <select asp-for="GioiTinh" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                            <option value="Khác">Khác</option>
                        </select>
                        <span asp-validation-for="GioiTinh" class="mt-1 text-sm text-red-600"></span>
            </div>
                    
                    <div class="mb-4">
                        <label asp-for="AvatarFile" class="block mb-2 text-sm font-medium text-gray-900">Ảnh đại diện</label>
                        @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
                        {
                            <div class="mb-2">
                                <img src="@Model.AnhDaiDien" alt="Ảnh đại diện" class="h-32 w-32 object-cover rounded-lg border border-gray-300" />
                            </div>
                        }
                        <input asp-for="AvatarFile" type="file" accept="image/*" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                        <span asp-validation-for="AvatarFile" class="mt-1 text-sm text-red-600"></span>
                        <p class="mt-1 text-sm text-gray-500">Chọn file ảnh mới để thay thế ảnh đại diện hiện tại. Hỗ trợ các định dạng JPG, PNG, GIF.</p>
            </div>
            </div>
                
                <!-- Cột bên phải -->
                <div>
                    <div class="mb-4">
                        <label asp-for="SoDienThoai" class="block mb-2 text-sm font-medium text-gray-900">Số điện thoại</label>
                        <input asp-for="SoDienThoai" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                        <span asp-validation-for="SoDienThoai" class="mt-1 text-sm text-red-600"></span>
            </div>
                    
                    <div class="mb-4">
                        <label asp-for="Email" class="block mb-2 text-sm font-medium text-gray-900">Email</label>
                        <input asp-for="Email" type="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                        <span asp-validation-for="Email" class="mt-1 text-sm text-red-600"></span>
            </div>
                    
                    <div class="mb-4">
                        <label asp-for="DiaChi" class="block mb-2 text-sm font-medium text-gray-900">Địa chỉ</label>
                        <input asp-for="DiaChi" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
                        <span asp-validation-for="DiaChi" class="mt-1 text-sm text-red-600"></span>
            </div>
                    
                    <div class="mb-4">
                        <label asp-for="MaTK" class="block mb-2 text-sm font-medium text-gray-900">Tài khoản</label>
                        <select asp-for="MaTK" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" asp-items="ViewBag.MaTK"></select>
                        <span asp-validation-for="MaTK" class="mt-1 text-sm text-red-600"></span>
            </div>
            </div>
            </div>
            
            <div class="flex justify-between items-center mt-6">
                <a href="/ThanhViens" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10">
                    Quay lại
                </a>
                <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5">
                    Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

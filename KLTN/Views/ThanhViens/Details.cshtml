@model KLTN.Models.Database.ThanhVien

@{
    ViewData["Title"] = "Chi tiết thành viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Thêm Flowbite và Tailwind CSS CDN -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="px-4 py-5">
    <div class="mb-4">
        <h1 class="text-2xl font-bold text-gray-800">Chi tiết thành viên</h1>
        <nav class="flex mt-3" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="/ThanhViens" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                        <svg class="w-3 h-3 mr-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                        </svg>
                        Danh sách thành viên
                    </a>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                        </svg>
                        <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Chi tiết thành viên</span>
                    </div>
                </li>
            </ol>
        </nav>
    </div>

    <div class="py-5 px-6 mb-6 bg-white rounded-lg shadow-md">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Cột trái - hiển thị ảnh và thông tin cơ bản -->
            <div>
                <!-- Ảnh đại diện -->
                <div class="bg-white rounded-lg shadow-md p-4 mb-6">
                    <h2 class="text-xl font-semibold mb-4 text-gray-800">Ảnh đại diện</h2>
                    <div class="flex justify-center">
                        @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
                        {
                            <img src="@Model.AnhDaiDien" alt="Ảnh đại diện" class="h-48 w-48 object-cover rounded-lg border border-gray-300">
                        }
                        else
                        {
                            <div class="h-48 w-48 flex items-center justify-center bg-gray-100 rounded-lg border border-gray-300">
                                <svg class="w-16 h-16 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                        }
                    </div>
                </div>
                
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Thông tin cơ bản</h2>
                    <dl class="grid grid-cols-1 gap-y-3">
                        <div class="grid grid-cols-3 items-center">
                            <dt class="text-sm font-medium text-gray-500">Họ tên:</dt>
                            <dd class="col-span-2 text-sm font-medium text-gray-900">@Html.DisplayFor(model => model.HoTen)</dd>
                        </div>
                        
                        <div class="grid grid-cols-3 items-center">
                            <dt class="text-sm font-medium text-gray-500">Ngày sinh:</dt>
                            <dd class="col-span-2 text-sm font-medium text-gray-900">@Html.DisplayFor(model => model.NgaySinh)</dd>
                        </div>
                        
                        <div class="grid grid-cols-3 items-center">
                            <dt class="text-sm font-medium text-gray-500">Giới tính:</dt>
                            <dd class="col-span-2 text-sm font-medium text-gray-900">@Html.DisplayFor(model => model.GioiTinh)</dd>
                        </div>
                    </dl>
                </div>
            </div>
            
            <!-- Cột phải - thông tin liên hệ và tài khoản -->
            <div>
                <div class="mb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Thông tin liên hệ</h2>
                    <dl class="grid grid-cols-1 gap-y-3">
                        <div class="grid grid-cols-3 items-center">
                            <dt class="text-sm font-medium text-gray-500">Số điện thoại:</dt>
                            <dd class="col-span-2 text-sm font-medium text-gray-900">@Html.DisplayFor(model => model.SoDienThoai)</dd>
                        </div>
                        
                        <div class="grid grid-cols-3 items-center">
                            <dt class="text-sm font-medium text-gray-500">Email:</dt>
                            <dd class="col-span-2 text-sm font-medium text-gray-900">@Html.DisplayFor(model => model.Email)</dd>
                        </div>
                        
                        <div class="grid grid-cols-3 items-center">
                            <dt class="text-sm font-medium text-gray-500">Địa chỉ:</dt>
                            <dd class="col-span-2 text-sm font-medium text-gray-900">@Html.DisplayFor(model => model.DiaChi)</dd>
                        </div>
                    </dl>
                </div>

<div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Thông tin tài khoản</h2>
                    <dl class="grid grid-cols-1 gap-y-3">
                        <div class="grid grid-cols-3 items-center">
                            <dt class="text-sm font-medium text-gray-500">Tài khoản:</dt>
                            <dd class="col-span-2 text-sm font-medium text-gray-900">
                                @if (Model.TaiKhoan != null)
                                {
                                    <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-1.5 rounded">
                                        @Model.TaiKhoan.TenDangNhap
                                    </span>
                                }
                                else
                                {
                                    <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-1.5 rounded">
                                        Chưa có tài khoản
                                    </span>
                                }
        </dd>
                        </div>
                        
                        @if (Model.TaiKhoan != null)
                        {
                            <div class="grid grid-cols-3 items-center">
                                <dt class="text-sm font-medium text-gray-500">Trạng thái:</dt>
                                <dd class="col-span-2 text-sm font-medium">
                                    @if (Model.TaiKhoan.TrangThai == "HoatDong")
                                    {
                                        <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-1.5 rounded">
                                            Hoạt động
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-1.5 rounded">
                                            @Model.TaiKhoan.TrangThai
                                        </span>
                                    }
        </dd>
                            </div>
                            
                            <div class="grid grid-cols-3 items-center">
                                <dt class="text-sm font-medium text-gray-500">Ngày tạo:</dt>
                                <dd class="col-span-2 text-sm font-medium text-gray-900">
                                    @Model.TaiKhoan.NgayTao.ToString("dd/MM/yyyy")
        </dd>
                            </div>
                        }
    </dl>
</div>
            </div>
        </div>
        
        <div class="flex justify-start mt-8 gap-3">
            <a asp-action="Edit" asp-route-id="@Model.MaTV" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none">
                Chỉnh sửa
            </a>
            <a asp-action="Index" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10">
                Quay lại danh sách
            </a>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js"></script>

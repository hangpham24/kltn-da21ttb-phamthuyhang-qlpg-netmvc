@model IEnumerable<KLTN.Models.Database.DichVu>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenDichVu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiDichVu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaBatDau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HinhAnhURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoiTap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LopHoc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDichVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiDichVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBatDau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HinhAnhURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoiTap.TenGoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LopHoc.NgayTrongTuan)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaDichVu">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaDichVu">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaDichVu">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
